---
const {backHref} = Astro.props;
---

<style>
  #header {
    font-family: var(--header-font);
    font-size: 48px;
    position: relative;
    background-color: black;
    padding: 14px 0 14px 0;
    text-align: center;
    display: block;
    margin-bottom: 14px;
  }

  a {
    color: white;
    text-decoration: none;
  }

  #name:hover {
    text-decoration: underline;
  }

  #backButton {
    position: absolute;
    left: 0;
    margin-left: 24px;
  }
</style>
<div id="header">
  {backHref ? <a id="backButton" href={backHref}>&lt;</a> : null}
  <a id="name" class="elliscript" href="/"><slot/></a>
</div>