<style>
  aside {
    margin-right: 2em;
    margin-top: 36px;
    --github-logo-color: var(--on-surface-color);
    --twitter-logo-color: var(--on-surface-color);
  }

  aside > * {
    margin: 4px 0;
  }

  #social-wrapper {
    display: flex;
    justify-content: center;
  }

  #social-wrapper svg {
    height: 30px;
    width: 30px;
    margin: 0 .15em 0 .15em;
  }

  #social-wrapper a {
    width: 48px;
    height: 48px;
    display: flex;
    justify-content: center;
    align-items: center;
  }

  picture img {
    width: 150px;
    height: 150px;
    border-radius: 50%;
  }

  aside, nav {
    display: flex;
    flex-direction: column;
    align-items: center;
  }

  #avatar {
    height: 150px;
    width: 150px;
  }

  nav {
    flex-wrap: wrap;
    justify-content: center;
  }

  @media (max-width: 600px) {
    nav {
      flex-direction: row;
    }

    aside {
      margin-right: 0;
    }
  }
</style>
